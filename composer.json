{
    "name": "fundevogel/php-pcbis",
    "type": "library",
    "description": "Simple PHP wrapper for pcbis.de API, written in PHP",
    "keywords": ["pcbis", "knv", "api"],
    "homepage": "https://codeberg.org/fundevogel/php-pcbis",
    "license": "GPL-3.0",
    "version": "3.0.0-beta.2",
    "scripts": {
        "cs-dry": "php-cs-fixer fix --diff --dry-run",
        "cs-fix": "php-cs-fixer fix --diff",
        "test": "phpunit"
    },
    "authors": [
        {
            "name": "Kinder- und Jugendbuchhandlung Fundevogel",
            "email": "maschinenraum@fundevogel.de",
            "homepage": "https://fundevogel.de",
            "role": "Maintainer"
        },
        {
            "name": "Martin Folkers",
            "email": "hello@twobrain.io",
            "homepage": "https://twobrain.io",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "maschinenraum@fundevogel.de",
        "forum": "https://forum.getkirby.com",
        "source": "https://codeberg.org/fundevogel/php-pcbis",
        "issues": "https://codeberg.org/fundevogel/php-pcbis/issues"
    },
    "require": {
        "php": "^8.0",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.4.5",
        "symfony/cache": "^6.0.9"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^4.23"
    },
    "suggest": {
        "nicebooks/isbn": "Provides ISBN functionality such as validation, formatting & more."
    },
    "autoload": {
        "psr-4": {
            "Fundevogel\\Pcbis\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fundevogel\\Pcbis\\Tests\\": "tests/"
        }
    }
}
